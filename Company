    <script>
        function runSmartLogic() {
            const device = document.getElementById('deviceType').value;
            const method = document.getElementById('paymentMethod').value;
            const boxes = document.querySelectorAll('.conditional-box');
            
            boxes.forEach(box => box.style.setProperty('display', 'none', 'important'));

            if (method === 'Ù‚Ø³Ø·' && device !== "") {
                if (device === 'ÙƒÙˆÙ…Ø¨ÙƒØª') document.getElementById('planCompact').style.setProperty('display', 'block', 'important');
                else if (device === 'ÙÙ„ØªØ±ÙŠØ´Ù†') document.getElementById('planFiltration').style.setProperty('display', 'block', 'important');
                else if (device === 'RO') document.getElementById('planRO').style.setProperty('display', 'block', 'important');
            }
        }

        function openPage(pageId) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.querySelectorAll('nav a').forEach(a => a.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');
            document.getElementById('btn-' + pageId).classList.add('active');
        }

        window.onload = runSmartLogic;
    </script>
